<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivNotificationReadOrNot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/gaslogo_bgtotal"
        android:backgroundTint="#5FB2F6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/NotificationType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_Schedule"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sofia_pro_regular_az"
                android:textSize="16dp"
                android:textColor="#FF9500"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical"
                android:background="#707070"/>

            <TextView
                android:id="@+id/NotificationTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text="2 hours ago"
                android:gravity="right"
                android:fontFamily="@font/sofia_pro_medium_az"
                android:textSize="12dp"
                android:textColor="#8e8e93"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NotificationL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dammar Yadav"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sofia_pro_semi_bold_az"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/NotificationL2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bajrang traders"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sofia_pro_regular_az"
                    android:textSize="16dp"
                    android:letterSpacing="0.1"
                    android:textColor="#CCFFFFFF"/>

                <TextView
                    android:id="@+id/NotificationL3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phool Chowlk, Bhokraha - 3"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sofia_pro_regular_az"
                    android:textSize="14dp"
                    android:letterSpacing="0.1"
                    android:textColor="#ccffffff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NotificationR1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send · Full · K : 20"
                    android:gravity="right"
                    android:fontFamily="@font/sofia_pro_light_az"
                    android:textSize="16dp"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/NotificationR2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="right"
                    android:fontFamily="@font/sofia_pro_light_az"
                    android:textSize="16dp"
                    android:textColor="#ffffff"/>

                <FrameLayout
                    android:id="@+id/btnAccept"
                    android:visibility="visible"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:animateLayoutChanges="true">

                    <ImageView
                        android:id="@+id/ImageAccept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_toggle_active"
                        android:layout_gravity="left|center_vertical"/>

                    <TextView
                        android:id="@+id/textAccept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accept"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sofia_pro_regular_az"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                </FrameLayout>

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>