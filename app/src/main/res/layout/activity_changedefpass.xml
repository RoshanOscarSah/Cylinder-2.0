<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    tools:context=".ChangedefpassActivity">



    <LinearLayout
        android:id="@+id/animateFallDiagnol"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_gravity="top|start"
        android:background="@drawable/ic_rectangle_downcurve"
        android:foregroundGravity="bottom"
        android:orientation="vertical"
        android:gravity="top|end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="20dp">
            <ImageView
                android:id="@+id/backChangedefpass"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/title_ChangeDefaultPassword"
            android:fontFamily="@font/sofia_pro_black_az"
            android:textAlignment="center"
            android:textSize="25sp"
            android:foregroundGravity="top"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textStyle="bold"
            android:textFontWeight="900"
            android:gravity="center_horizontal" />
        <EditText
            android:id="@+id/etdefUsername"
            android:paddingLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sofia_pro_regular_az"
            android:textSize="24sp"
            android:textStyle="bold"
            android:hint="@string/title_Username"
            android:inputType="text"
            android:textColor="@color/black"
            android:background="@drawable/ic_rectangle_username"
            app:backgroundTint="#fff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rectangle_password"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:layout_weight="2"
                android:id="@+id/etdefPassword"
                android:paddingLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:fontFamily="@font/sofia_pro_regular_az"
                android:textSize="24sp"
                android:textStyle="bold"
                android:hint="@string/title_DefaultPassword"
                android:textColor="@color/black"
                android:shadowColor="@color/black"
                app:backgroundTint="#fff"/>

            <ToggleButton
                android:id="@+id/toggledefPasswordView"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_margin="15dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_eye"
                android:textOff=""
                android:textOn=""
                android:checked="false"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rectangle_password"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etnewPassword"
                android:layout_weight="5"
                android:paddingLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:fontFamily="@font/sofia_pro_regular_az"
                android:textSize="24sp"
                android:textStyle="bold"
                android:hint="@string/title_NewPassword"
                android:textColor="@color/black"
                android:shadowColor="@color/black"
                app:backgroundTint="#fff"/>

            <ToggleButton
                android:id="@+id/togglenewPasswordView"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_margin="15dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_eye"
                android:textOff=""
                android:textOn=""
                android:checked="false"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rectangle_loginbtn"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/changepassbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_ChangePassword"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/sofia_pro_semi_bold_az"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textFontWeight="900"
                android:textColor="#f55a63"
                android:layout_weight="3"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center|bottom"
        android:layout_margin="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_RakeshKiranaPasal"
            android:textAlignment="center"
            android:layout_weight="900"
            android:textStyle="normal"
            android:gravity="center_horizontal"
            android:textColor="#99FFFFFF"
            android:textSize="24dp"
            android:fontFamily="@font/sofia_pro_regular_az"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:layout_weight="900"
            android:textStyle="normal"
            android:gravity="center_horizontal"
            android:textColor="#4DFFFFFF"
            android:textSize="16dp"
            android:fontFamily="@font/sofia_pro_regular_az"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/title_PoweredbyEachut"
            android:textAlignment="center"
            android:layout_weight="900"
            android:textStyle="normal"
            android:gravity="center_horizontal"
            android:textColor="#4DFFFFFF"
            android:textSize="16dp"
            android:letterSpacing="0.3"
            android:fontFamily="@font/sofia_pro_regular_az"/>

    </LinearLayout>

</LinearLayout>