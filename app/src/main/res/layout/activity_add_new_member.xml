<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddNewMemberActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Add Profile"
                android:fontFamily="@font/sofia_pro_black_az"
                android:textAlignment="center"
                android:textSize="30sp"
                android:foregroundGravity="top"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textFontWeight="900"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp">

            <FrameLayout
                android:id="@+id/flTab3"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/ivToggleBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/tab3_bg" />

                <ImageView
                    android:id="@+id/ivToggleActiveP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/tab3_active" />

                <TextView
                    android:id="@+id/tvCustomerP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_Reseller"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofia_pro_regular_az"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_gravity="left|center"/>

                <TextView
                    android:id="@+id/tvCompanyP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_Company"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofia_pro_regular_az"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvMemberP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_Member"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofia_pro_regular_az"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"/>

            </FrameLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">


                <EditText
                    android:id="@+id/etMFname"
                    android:paddingLeft="20dp"
                    android:paddingTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sofia_pro_regular_az"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:hint="First name"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/ic_rectangle_member"
                    app:backgroundTint="#fff"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rectangle_memberflid"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etMLname"
                        android:paddingLeft="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sofia_pro_regular_az"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:hint="Last Name"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:background="@drawable/ic_rectangle_member"
                        app:backgroundTint="#fff"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rectangle_memberflid"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/etMPhone"
                        android:paddingLeft="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sofia_pro_regular_az"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:hint="Phone Number"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:background="@drawable/ic_rectangle_member"
                        app:backgroundTint="#fff"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rectangle_memberflid"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/etMAddress"
                        android:paddingLeft="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sofia_pro_regular_az"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:hint="Address"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:background="@drawable/ic_rectangle_member"
                        app:backgroundTint="#fff"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/adminOrEmployee"
                    android:contentDescription="ADMIN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <!--            send-->
                    <LinearLayout
                        android:id="@+id/llAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1"
                        android:background="@drawable/send_recieve_bg"
                        android:backgroundTint="#5FB2F6">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="left|center_vertical"
                            android:src="@drawable/ic_team_building"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Admin"
                                android:textAlignment="textEnd"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:textColor="#99FFFFFF"
                                android:textStyle="normal"
                                android:textSize="12dp"
                                android:gravity="end" />


                            <ImageView
                                android:id="@+id/ivSendCheck"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="30dp"
                                android:layout_gravity="right|center_vertical"
                                android:src="@drawable/ic_checked"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llEmploye"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1"
                        android:background="@drawable/send_recieve_bg"
                        android:backgroundTint="#995FB2F6">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Employe"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:textColor="#99FFFFFF"
                                android:textStyle="normal"
                                android:textSize="12dp" />

                            <ImageView
                                android:id="@+id/ivRecieveCheck"
                                android:layout_width="205dp"
                                android:layout_height="25dp"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginLeft="-120dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_checked"
                                android:visibility="visible" />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="left|center_vertical"
                            android:src="@drawable/ic_warehouse"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commission"
                    android:visibility="gone"
                    android:background="@drawable/ic_rectangle_memberflid"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/cylincom"
                        android:paddingLeft="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sofia_pro_regular_az"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:hint="Commission"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:background="@drawable/ic_rectangle_member"
                        app:backgroundTint="#fff"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rectangle_addbtn"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnAddProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Profile"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/sofia_pro_semi_bold_az"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textFontWeight="900"
                        android:textColor="#f55a63"
                        android:layout_weight="3"/>


                </LinearLayout>

            </LinearLayout>


        </ScrollView>



    </LinearLayout>



</FrameLayout>