<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="21dp"
            android:id="@+id/Plus"
            android:layout_height="21dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/ic_plus"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/llsearchBox"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/tab3_bg"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-35dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_search"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/flTab3"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:animateLayoutChanges="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tab2_bg"/>

                <ImageView
                    android:id="@+id/ivToggleActiveNoti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_tab2_active"
                    android:layout_gravity="left|center_vertical"/>

                <TextView
                    android:id="@+id/tvNotiAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_All"
                    android:padding="10dp"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofia_pro_regular_az"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_gravity="left|center"/>

                <TextView
                    android:id="@+id/tvNotiSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_Schedule"
                    android:padding="10dp"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofia_pro_regular_az"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"/>

            </FrameLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivSearchProfiles"
            android:layout_width="20dp"
            android:visibility="visible"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_search"/>

        <ImageView
            android:id="@+id/ivCancalSearchProfiles"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ic_icon_metro_cross"
            android:backgroundTint="#80FFFFFF"/>

        <LinearLayout
            android:id="@+id/ivFilterProfiles"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="18dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_filter"/>

        </LinearLayout>



    </LinearLayout>
    <!--NOTIFICATION-->
    <ScrollView
        android:id="@+id/svNotificationView"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </ScrollView>

    <!--SCHEDULE-->
    <ScrollView
        android:id="@+id/svScheduleView"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--today-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lltodayToggle"
                    android:contentDescription="max"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_rect_corner"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/lltodayToggleUpDown"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:rotation="180"
                        android:src="@drawable/ic_dropdown"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TODAY"
                        android:layout_marginLeft="20dp"
                        android:textColor="#ff9500"
                        android:textStyle="normal"
                        android:textFontWeight="900"
                        android:fontFamily="@font/sofia_pro_medium_az"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:paddingRight="10dp"
                        android:textColor="#ff9500"
                        android:textStyle="normal"
                        android:textFontWeight="900"
                        android:gravity="right|center_vertical"
                        android:fontFamily="@font/sofia_pro_medium_az"
                        android:textSize="16dp"/>
                </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


            <!--later-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lllaterToggle"
                    android:contentDescription="min"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_rect_corner"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/lllaterToggleUpDown"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:rotation="0"
                        android:src="@drawable/ic_dropdown"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LATER"
                        android:layout_marginLeft="20dp"
                        android:textColor="#ff9500"
                        android:textStyle="normal"
                        android:textFontWeight="900"
                        android:fontFamily="@font/sofia_pro_medium_az"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:paddingRight="10dp"
                        android:textColor="#ff9500"
                        android:textStyle="normal"
                        android:textFontWeight="900"
                        android:gravity="right|center_vertical"
                        android:fontFamily="@font/sofia_pro_medium_az"
                        android:textSize="16dp"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Extrarecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>